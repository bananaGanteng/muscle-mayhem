-- FaDhen Simple Toggle Library
local CoreGui = game:GetService("CoreGui")
if CoreGui:FindFirstChild("FaDhenSimpleGui") then
    CoreGui.FaDhenSimpleGui:Destroy()
end

-- Variabel global default
getgenv().AutoFarm = getgenv().AutoFarm or false
getgenv().AutoSell = getgenv().AutoSell or false
getgenv().Protection = getgenv().Protection or false

-- GUI utama
local gui = Instance.new("ScreenGui")
gui.Name = "FaDhenSimpleGui"
gui.Parent = CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 180, 0, 140)
frame.Position = UDim2.new(0.05, 0, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
frame.Parent = gui

local layout = Instance.new("UIListLayout")
layout.Padding = UDim.new(0, 5)
layout.Parent = frame

-- Fungsi global untuk menambah toggle
local function addToggle(name, globalVar)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -10, 0, 30)
    btn.Text = name .. ": OFF"
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Parent = frame

    btn.MouseButton1Click:Connect(function()
        getgenv()[globalVar] = not getgenv()[globalVar]
        btn.Text = name .. (getgenv()[globalVar] and ": ON" or ": OFF")
        print(name, ":", getgenv()[globalVar])
    end)
end

getgenv().AddToggle = addToggle
return true
